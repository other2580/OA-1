<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oa.dao.MessageAttachmentDao">
	<!-- 添加邮件附件 -->
	<insert id="add" parameterType="MessageAttachment" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO MessageAttachment(NAME, FileUrl, MessageId) 
			VALUES(#{name}, #{fileUrl}, #{message.id})
	</insert>
	<!-- 根据附件Id 删除邮件附件 -->
	<delete id="delete" parameterType="int">
		DELETE FROM MessageAttachment WHERE messageId = #{messageId}
	</delete>
	
	<resultMap type="MessageAttachment" id="MessageAttachmentResultMap">
		<id column="id" property="id"/>
		<result column="name" property="name" />
		<result column="FileUrl" property="fileUrl"/>
		<association property="message" column="messageId" 
			javaType="Message" select="oa.dao.MessageDao.fetchMessageById" />
	</resultMap>
	
	<!-- 根据邮件Id 查找附件 -->
	<select id="fetchMessageAttachmentByMSID" resultMap="MessageAttachmentResultMap" parameterType="int">
		SELECT * FROM MessageAttachment WHERE messageId = #{messageId}
	</select>
</mapper>